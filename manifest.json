{
  "manifest_version": 3,
  "name": "Audio/Video Delay",
  "version": "2.1.0",
  "description": "Seamlessly delays audio and DRM-free video",
  "permissions": ["storage"],
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["main.js"], "all_frames": true }],
  "action": { "default_popup": "gui.html" },
  "icons": { "256": "icon.png" }
}